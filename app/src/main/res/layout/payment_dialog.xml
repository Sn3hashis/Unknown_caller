<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backround"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/backround"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Pay using UPI"
            android:gravity="center"
            android:textSize="20dp"/>
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            style="@style/RbButton.Inverse"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/payment_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="200dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/backround"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Plan Details"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="-8dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ribbon"
                    android:layout_alignParentRight="true"
                    android:paddingRight="-8dp" />


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@id/rupee_layout"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pack_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nano pack"
                            android:layout_marginBottom="3dp"
                            android:textSize="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_marginEnd="20dp"
                            android:layout_height="0.5dp"
                            android:layout_marginStart="10dp"
                            android:background="@color/grey_line"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_coin"
                                android:layout_gravity="center"
                                android:tint="@color/grey_line"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:id="@+id/pack_credits"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="600 Credits"
                                android:layout_marginStart="3dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/grey_line"
                                android:layout_marginLeft="3dp" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rupee_layout"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@color/gnt_blue"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/pack_cost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="â‚¹30"
                            android:gravity="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Name (Optional)"
                android:paddingStart="10dp"
                android:background="@drawable/inputbox"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/upi_id"
                android:paddingLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="Email (Optional)"
                android:paddingStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/inputbox"
                android:layout_marginTop="10dp"
                android:id="@+id/name"
                android:paddingLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Payment note"
                android:gravity="top"
                android:paddingStart="10dp"
                android:background="@drawable/inputbox"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/note"
                android:paddingLeft="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/upi"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/backround"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/RbButton.Inverse.Green"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:id="@+id/send"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_below="@+id/note"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="Make payment"/>

            </LinearLayout>


        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/sucess_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@drawable/backround"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="75dp"
                android:layout_marginTop="20dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@drawable/green_tick"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Payment successful"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:background="@drawable/backround"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/close_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    style="@style/RbButton.Inverse"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_below="@+id/note"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="Close"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>





</LinearLayout>